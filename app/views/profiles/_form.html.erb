<%= form_for @profile, url: user_profile_path, :html => { :multipart => true } do |f| %>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			  <%= image_tag @profile.avatar.url(:medium) %>
				<%= f.label :avatar, 'Image (min 500x500px)' %>
				<%= f.file_field :avatar %>
			</div>

			<% if @user.acct_type == 'Artist' %>
				<%= form_for @artist do |f| %>
					<div class="form-group">
						<%= f.label :artist_name %>
						<%= f.text_field :artist_name, class: 'form-control' %>
					</div>
				<% end %>
			<% end %>

			<div class="form-group">
				<%= f.label :first_name %>
				<%= f.text_field :first_name, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :city %>
				<%= f.text_field :city, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :country %>
				<%= f.text_field :country, class: 'form-control' %> 
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :genre %>
				<%= f.text_field :genre, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :bio %>
				<%= f.text_area :bio, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :manager %>
				<%= f.text_field :manager, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :manager_email %>
				<%= f.text_field :manager_email, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.label :manager_phone %>
				<%= f.text_field :manager_phone, class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= f.submit 'Update Profile', class: 'btn btn-primary' %>
			</div>
		</div>
	</div>
	<% end %>